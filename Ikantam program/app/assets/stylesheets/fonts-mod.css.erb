/*
  Use as .erb to enable assets compilation
  asset_path function is used to generate appropriate urls for images/fonts
 */
@font-face {
  font-family: 'OpenSans-Light';
  src: url(<%= asset_path 'OpenSans-Light.eot' %>);
  src:
    local('O'),
    url(<%= asset_path 'OpenSans-Light.woff' %>) format('woff'),
    url(<%= asset_path 'OpenSans-Light.ttf' %>) format('truetype'),
    url(<%= asset_path 'OpenSans-Light.svg' %>) format('svg');
  font-weight: normal;
  font-style: normal;
}

