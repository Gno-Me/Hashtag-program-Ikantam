<div class="wrap height-100">
  <div class="banner landing">
    <h1>Join Matt Pound app for free!</h1>
    <h3>Sign up</h3>

    <div class="block-sign-in">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
          <div class="col-xs-6">
            <div class="wrap-input">
              <!-- FIRST_NAME -->
              <!-- <input id="user_first_name" name="user[first_name]" type="text" placeholder="First name"> -->
              <%= f.text_field :first_name, placeholder: 'First name', autofocus: true, tabindex: 3 %>
              <span class="text-error">Required field</span>
            </div>
            <div class="wrap-input birthday">
              <input type="text" placeholder="Birthday" name="select_birth" class="birth">
              <%= f.date_select(:birth_date,
                                {
                                  # prompt: { day: 'Day', month: 'Month', year: 'Year' },
                                  start_year: Date.today.year - 100, end_year: Date.today.year,
                                  order: [:month, :day, :year]
                                },
                                { class: 'chosen', tabindex: 5 }) %>
              <span class="text-error">Required field</span>
            </div>
            <div class="wrap-input">
              <!-- USERNAME -->
              <%= f.text_field :username, placeholder: 'Username', tabindex: 7 %>
              <span class="text-error">Username is registered</span>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="wrap-input">
              <!-- SURNAME -->
              <%= f.text_field :last_name, placeholder: 'Surname', tabindex: 4 %>
              <span class="text-error">Required field</span>
            </div>
            <div class="wrap-input">
              <%= f.email_field :email, placeholder: 'Email', tabindex: 6 %>
              <span class="text-error">Invalid email</span>
            </div>
            <div class="wrap-input">
              <!-- PASSWORD -->
              <%= f.password_field :password, placeholder: 'Password', autocomplete: 'off', tabindex: 8 %>
              <span class="text-error">Required field</span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <button class="btn-signup">Sign Up</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'bootstrap.file-input' %>
<%= javascript_include_tag 'chosen.jquery.min' %>
<%= javascript_include_tag 'cf.min' %>
<%= javascript_include_tag 'jquery.validate.min.js' %>
<%= javascript_include_tag 'custom' %>
<%= javascript_include_tag 'dev' %>
