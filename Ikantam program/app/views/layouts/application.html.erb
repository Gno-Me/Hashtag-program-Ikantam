<!DOCTYPE html>
<!--[if lt IE 9]><script src="https://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
<!--[if !IE]><!-->
<script>if(/*@cc_on!@*/false){document.documentElement.className+=' ie10';}</script>
<!--<![endif]-->
<!--[if IE 9 ]><html class="ie9"><![endif]-->
<!--[if IE 8 ]><html class="ie8"><![endif]-->
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Matt Pound</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body>
  <div class="main-container height-100">
    <!-- header -->
    <div class="navbar" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href=<%= root_path %>>Matt <span>Pound</span></a>
        </div>
        <% if user_signed_in? %>
          <div class="dropdown header-menu pull-right">
            <a class="dropdown-toggle" id="header-dropdown-menu" data-toggle="dropdown">
              &#x25BE; <%= current_user.display_name %>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="header-dropdown-menu">
              <li role="presentation">
                <%= link_to('Log out', destroy_user_session_url, method: 'delete') %>
                <!-- <a role="menuitem" tabindex="-1" href="#">Action</a> -->
              </li>
            </ul>
          </div>
        <% else %>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav pull-right">
              <li><%= link_to 'Sign in', new_user_session_path %></li>
              <li><%= link_to 'Join now', new_user_registration_path, class: 'join-now' %></li>
            </ul>
          </div>
        <% end %>

      </div>
  </div>

  <%= yield %>

  <%= yield :flash %>
</body>
</html>
