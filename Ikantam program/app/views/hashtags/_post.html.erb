<div class="wrap-posts">

  <div class="post post-<%= post.source.dasherize %>">
    <div class="post-header">

      <div class="avatar-post">
        <%= image_tag post.profile_image_url %>
      </div>

      <div class="title-post">

        <h3>
          <% if post.profile_display_url.nil? %>
            <span class="post-username">
              <%= post.profile_display_name %>
            </span>
          <% else %>
            <a class="post-username" href="<%= post.profile_display_url %>">
              <%= post.profile_display_name %>
            </a>
          <% end %>
        </h3>

        <% if post.post_display_url.nil? %>
          <span class="post-time">
            <%= post.posted_at.to_formatted_s(:long_ordinal) %>
          </span>
        <% else %>
          <a class="post-time" href="<%= post.post_display_url %>">
            <%= post.posted_at_display %>
          </a>
        <% end %>

      </div>

      <div class="social-post">
        <i class="icon-<%= post.source.dasherize %>"></i>
      </div>

    </div>

    <div class="post-body">

      <p>
        <%= post.post_description %>
      </p>

      <% if post.source == 'instagram' || post.source == 'twitter' %>
        <% if post.post_content_type == 'image' %>
          <%= image_tag post.post_content %>
        <% elsif post.post_content_type == 'video' %>
          <video width="360" height="360" controls preload="none">
            <source src="<%= post.post_content %>" type="video/mp4" />
          </video>
        <% end %>
      <% end %>

    </div>

  </div>
</div>

